<div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
  
  <style>
    .hamburger {
      position: fixed;
      right: 2rem;
      bottom: 3rem;
      z-index: 10;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: center;
      width: 3rem;
      height: 3rem;
      cursor: pointer;
      border-radius: var(--border-radius);
      transform: scale(1);
      transition: transform 0.5s ease-in-out, box-shadow 0.5s ease-in-out;
      box-shadow: var(--shadow-hamburger-off);
      background-color: var(--light-gray-alfa);
    }
  
    :global(.dark) .hamburger { 
      background-color: var(--dark-gray-alfa);
    }
    
    .hamburger.expanded {
      transform: rotate(45deg) scale(1.1);
      box-shadow: var(--shadow-hamburger-on);
    }
  
    .line {
      display: block;
      width: 30px;
      height: 3px;
      transition: transform 0.3s ease-in-out;
      background-color: var(--light-color);
    }
  
    :global(.dark) .line {
      background-color: var(--dark-color);
    }
  
    .hamburger.expanded .line {
      width: 35px;
    }
  
    .hamburger.expanded .line:nth-child(1) {
      transform: translateY(12px);
    }
  
    .hamburger.expanded .line:nth-child(2) {
      opacity: 0;
    }
    
    .hamburger.expanded .line:nth-child(3) {
      transform: translateY(-12px) rotate(90deg);
    }
  
    @media screen and (min-width: 700px) {
      .hamburger {
        display: none;
      }
    }
  </style>
  