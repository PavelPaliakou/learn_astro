---
import NewHamburger from './NewHamburger.astro';
import Navigation from './NewNavigation.astro';
import SiteLogo from "../menu/SiteLogo.astro";
import ThemeIcon from '../menu/ThemeIcon.astro';
---

<header>
    <SiteLogo />
    <nav>
        <Navigation />
        <NewHamburger />
    </nav>
    <ThemeIcon />
</header>

<style>
    header {
        position: relative;
        top: 0px;
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2.5rem;
        background-color: var(--light-bg-element);
        box-shadow: var(--shadow-menu);
    }

    :global(.dark) header {
        background-color: var(--dark-bg-element);
    }

    nav {
        display: flex;
        flex: 1 1 0;
        justify-content: space-between;
        align-items: center;
    }

    @media screen and (min-width: 700px) {
        header {
            position: sticky;
            justify-content: space-evenly;
        }
    }
</style>
