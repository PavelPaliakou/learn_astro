---
import Social from "../Social.astro";
import Footer from "../Footer.astro";
---

<section id="contact">
    <h1>Contact</h1>

    <div>
        <h2>Contact with me</h2>
        <p>
            If you want to know more about me or my work, send me a message. 
            <br>
            I'd love to hear from you.
        </p>
    </div>

    <div class="contact-container">
        <div>
            <form action="mailto:contact@yourdomain.com" method="post" enctype="text/plain">
                <div class="name">
                    <label for="name">Name</label>
                    <input id="name" type="text" placeholder="Enter your name" required="">
                </div>
                <div class="email">
                    <label for="email">Email</label>
                    <input id="email" type="email" placeholder="Enter your email" required="">
                </div>
                <div class="message">
                    <label for="message">Message</label>
                    <textarea id="message" placeholder="Enter your message" required=""></textarea>
                </div>
                <div class="send">
                    <a href="mailto:contact@yourdomain.com">Send email directly</a>
                    <button type="submit">Send</button>
                </div>
            </form>
        </div>
        
        <div class="contact-data">
            <h2>Email</h2>
            <a href="#contact">email</a>
            <h2>Address</h2>
            <a href="#contact">Poland</a>
            <h2>Social</h2>
            <Social />
        </div>
    </div>

    <Footer />
</section>

<style>

    #contact {
        padding-bottom: 0;
    }

    div {
       width: 100%; 
    }

    form div {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .contact-container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    label {
        display: block;
        font-size: 1.125rem;
        font-weight: 500;
        line-height: 1.75rem;
        margin-bottom: 0.5rem;
    }

    input {
        display: block;
        width: 100%;
        padding: 0.625rem;
        border-width: 1px;
        border-radius: 0.5rem;
        color: var(--text-dark-mode);
        background-color: rgb(55, 65, 81);
        border-color: rgb(75, 85, 99);
    }

    textarea {
        display: block;
        height: 7rem;
        width: 100%;
        resize: vertical;
        font-size: 0.875rem;
        line-height: 1.25rem;
        color: var(--text-dark-mode);
        padding: 0.625rem;
        border-width: 1px;
        border-radius: 0.5rem;
        background-color: rgb(55, 65, 81);
        border-color: rgb(75, 85, 99);
    }

    .send {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .send a{
        text-decoration: none;
        color: rgb(99, 102, 241);
    }

    button {
        width: 10rem;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 1rem;
        background-color: rgb(99, 102, 241);
        color: var(--text-dark-mode);
        cursor: pointer;
    }
    
    button:hover{
        background-color: rgb(125, 127, 255);
    }

    .contact-data {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        width: 100%;
        gap: 1rem;
    }

    .contact-data a {
        font-weight: 600;
        text-decoration: none;
        color: rgb(99, 102, 241);
    }

    @media screen and (min-width: 636px) {
        .contact-container {
            flex-direction: row;
        }

        .contact-data {
            align-items: flex-end;
        }
    }
</style>