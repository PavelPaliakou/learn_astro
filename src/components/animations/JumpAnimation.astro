<div class="jump-when-visible">
    <slot />
</div>

<style>
    .jump-animation-up {
        animation-name: jump-up;
        animation-duration: 1s;
        animation-fill-mode: forwards;
    }

    .jump-animation-down {
        animation-name: jump-down;
        animation-duration: 1s;
        animation-fill-mode: forwards;
    }

    @keyframes jump-up {
        0% {
            transform: translateY(0%);
        }
        25% {
            transform: translateY(-30%);
        }
        50% {
            transform: translateY(0%);
        }
        75% {
            transform: translateY(-10%);
        }
        100% {
            transform: translateY(0%);
        }
    }

    @keyframes jump-down {
        0% {
            transform: translateY(0%);
        }
        25% {
            transform: translateY(30%);
        }
        50% {
            transform: translateY(0%);
        }
        75% {
            transform: translateY(10%);
        }
        100% {
            transform: translateY(0%);
        }
    }
</style>
