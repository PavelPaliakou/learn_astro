---
const imageData = Astro.props;
---
<img class="toZoom" src={imageData.link} alt={imageData.alt}/>
<div class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" src={imageData.link} alt={imageData.alt}/>
</div>

<style>
    .toZoom {
        max-width: 300px;
        width: 100%;
        border-radius: 5px;
        cursor: zoom-in;
        transition: 0.3s;
    }

    .toZoom:hover {
        opacity: 0.7;
    }

    .modal {
        display: none;
    }

    .modal.active {
        display: flex;
        position: fixed; /* Stay in place */
        z-index: 20; /* Sit on top */
        bottom: 0;
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgba(0, 0, 0, 0.9); /* Black w/ opacity */

        /* Blur instead of bg+opacity?
        backdrop-filter: blur(12px); */
    }
    
    .modal-content {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
        cursor: zoom-out;
        animation-name: zoom;
        animation-duration: 0.6s;
    }

    @keyframes zoom {
        from {
            transform: scale(0.1);
        }
        to {
            transform: scale(1);
        }
    }

    /* The Close Button */
    .close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        transition: 0.3s;
    }

    .close:hover {
        color: #bbb;
        text-decoration: none;
        cursor: pointer;
    }

    /* 100% Image Width on Smaller Screens */
    @media only screen and (max-width: 700px) {
        .modal-content {
            width: 100%;
        }
    }
</style>