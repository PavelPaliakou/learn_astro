---
import Hamburger from './menu/Hamburger.astro';
import Navigation from './menu/Navigation.astro';
import ThemeIcon from './menu/ThemeIcon.astro';
---

<header>
    <a class='logo' href='/'>Site Logo</a>
    <nav>
        <Navigation />
        <Hamburger />
    </nav>
    <ThemeIcon />
</header>

<style>
    /* TODO: If use blur - need another style for menu liks */
    header {
        position: fixed;
        width: 100%;
        top: 0px;
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2.5rem;
        background-color: hsla(0, 0%, 89%, 0.95);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    html.dark header {
        background-color: var(--menu-dark-mode);
    }

    .logo {
        flex-shrink: 0;
        color: var(--text-light-mode);
    }

    :global(.dark) .logo {
        color: var(--text-dark-mode);
    }

    @media (min-width: 636px) {
        header {
            background-color: transparent;
            backdrop-filter: blur(12px);
        }
    }
</style>
