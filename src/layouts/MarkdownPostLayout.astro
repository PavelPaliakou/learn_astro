---
import BaseLayout from "./BaseLayout.astro";
import { fade } from 'astro:transitions';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle = {frontmatter.pageTitle}>
    <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
    <p transition:animate={fade({ duration: '2s' })}><em>{frontmatter.description}</em></p>

    <p>Written by <a href="/about/">{frontmatter.author}</a></p>
    
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt}>
    
    <div class="tags">
        {
            frontmatter.tags.map((tag) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>

    <slot />
</BaseLayout>
